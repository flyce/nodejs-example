<h2>Query result</h2>
<p>The query result is shown below. You can click edit, delete or view buttons for further action.</p>
<table class="table">
    <thead>
    <tr>
        <th>Course ID</th>
        <th>Name</th>
        <th>Teacher ID</th>
        <th>Credit</th>
        <th>Grade</th>
        <th>Canceled Year</th>
        <th class="modify">Edit</th>
        <th class="modify delete">Delete</th>
        <th>Detail</th>
    </tr>
    </thead>
    <tbody>
    <% if (userData.length){ %>
        <% userData.forEach((course)=>{ %>
            <tr>
                <td><%= course.courseID %></td>
                <td><%= course.name %></td>
                <td><%= course.teacherID %></td>
                <td><%= course.credit %></td>
                <td><%= course.grade %></td>
                <td><%= course.canceledYear %></td>
                <td class="modify">
                    <button type="button" class="btn btn-primary btn-sm" onclick="showCourseEditDialog(<%= course.courseID %>)">EDIT</button>
                </td>
                <td class="modify delete">
                    <button type="button" class="btn btn-danger btn-sm" onclick="showCourseDeleteDialog(<%= course.courseID %>)">DELETE</button>
                </td>
                <td>
                    <form action="/detail" method="post">
                        <input type="text" class="form-control" name="type" value="course" hidden>
                        <input type="text" class="form-control" name="id" value="<%= course.courseID %>" hidden>
                        <button type="submit" class="btn btn-primary btn-sm">VIEW</button>
                    </form>
                </td>
            </tr>
    <% })}else{ %>
        <p>Nothing matches your query options.</p>
    <% } %>
    </tbody>
</table>
<script>hideModifyBtn("<%= userType %>")</script>