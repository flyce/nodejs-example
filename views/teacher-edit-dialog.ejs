<div class="modal fade" id="teacherEditDialog">
    <div class="modal-dialog">
        <div class="modal-content">

            <!-- 模态框头部 -->
            <div class="modal-header">
                <h4 class="modal-title">Edit Teacher Information</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <form action="/update/teacher" method="post">
                <!-- 模态框主体 -->
                <div class="modal-body">
                    <div class="form-group">
                        <label for="tOID">Original Teacher ID:</label>
                        <input type="text" class="form-control" id="tOID" name="tOID" value="No input" readonly>
                    </div>
                    <div class="form-group">
                        <label for="tOCourse">Original Teaching Course:</label>
                        <input type="text" class="form-control" id="tOCourse" name="tOCourse" value="No input" readonly>
                    </div>
                    <div class="form-group">
                        <label for="tID">Teacher ID:</label>
                        <input type="text" class="form-control" id="tID" name="tID" placeholder="Enter teacher ID">
                    </div>
                    <div class="form-group">
                        <label for="tName">Teacher Name:</label>
                        <input type="text" class="form-control" id="tName" name="tName" placeholder="Enter teacher's name">
                    </div>
                    <div class="form-group">
                        <label for="tSex">Sex:</label>
                        <input type="text" class="form-control" id="tSex" name="tSex" placeholder="Enter teacher's sex">
                    </div>
                    <div class="form-group">
                        <label for="tCourse">Course Name:</label>
                        <input type="text" class="form-control" id="tCourse" name="tCourse" placeholder="Enter the courses that taught by any teacher">
                    </div>
                </div>

                <!-- 模态框底部 -->
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Submit</button>
                    <button type="reset" class="btn btn-primary">Reset</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                </div>
            </form>
        </div>
    </div>
</div>