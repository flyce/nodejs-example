<div class="modal fade" id="studentEditDialog">
    <div class="modal-dialog">
        <div class="modal-content">

            <!-- 模态框头部 -->
            <div class="modal-header">
                <h4 class="modal-title">Edit Student Information</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <form action="/update/student" method="post">
                <!-- 模态框主体 -->
                <div class="modal-body">
                    <div class="form-group">
                        <label for="sOID">Original Student ID:</label>
                        <input type="text" class="form-control" id="sOID" name="sOID" value="No input" readonly>
                    </div>
                    <div class="form-group">
                        <label for="sID">Student ID:</label>
                        <input type="text" class="form-control" id="sID" name="sID" placeholder="Enter student ID">
                    </div>
                    <div class="form-group">
                        <label for="sName">Student Name:</label>
                        <input type="text" class="form-control" id="sName" name="sName" placeholder="Enter student's name">
                    </div>
                    <div class="form-group">
                        <label for="sSex">Sex:</label>
                        <input type="text" class="form-control" id="sSex" name="sSex" placeholder="Enter student's sex">
                    </div>
                    <div class="form-group">
                        <label for="sEnAge">Entrance Age:</label>
                        <input type="text" class="form-control" id="sEnAge" name="sEnAge" placeholder="Enter entrance age">
                    </div>
                    <div class="form-group">
                        <label for="sEnYear">Entrance Year:</label>
                        <input type="text" class="form-control" id="sEnYear" name="sEnYear" placeholder="Enter entrance year">
                    </div>
                    <div class="form-group">
                        <label for="sMajor">Major/Class:</label>
                        <input type="text" class="form-control" id="sMajor" name="sMajor" placeholder="Enter major or class">
                    </div>
                </div>

                <!-- 模态框底部 -->
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Submit</button>
                    <button type="reset" class="btn btn-primary">Reset</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                </div>
            </form>
        </div>
    </div>
</div>