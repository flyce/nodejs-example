<%- include('header') %>
<%- include('navigation-bar') %>
<%- include('message') %>
<div class="container" style="max-width: 500px" >
    <form action="/update/course" method="post">
        <h2>Details</h2>
        <div class="form-group">
            <label for="courseID">Course ID:</label>
            <input type="text" class="form-control" id="courseID" name="courseID" readonly value="<%= data.courseID%>">
        </div>
        <div class="form-group">
            <label for="name">Name:</label>
            <input type="text" class="form-control" id="name" name="name" value="<%= data.name%>">
        </div>
        <div class="form-group">
            <label for="teacherID">Teacher ID:</label>
            <input type="text" class="form-control" id="teacherID" name="teacherID" value="<%= data.teacherID%>">
        </div>
        <div class="form-group">
            <label for="credit">Credit:</label>
            <input type="number" class="form-control" id="credit" name="credit" min="0" max="10" step="0.1" value="<%= data.credit%>">
        </div>
        <div class="form-group">
            <label for="grade">Grade:</label>
            <input type="number" class="form-control" id="grade" name="grade" min="1" max="10" step="1" value="<%= data.grade%>">
        </div>
        <div class="form-group">
            <label for="canceledYear">Canceled Year:</label>
            <input type="number" class="form-control" id="canceledYear" name="canceledYear" min="2000" max="2100" step="1" value="<%= data.canceledYear%>">
        </div>
        <div class="w3-center">
            <button type="reset" class="btn btn-danger">Reset</button>
            <button type="submit" class="btn btn-primary">Submit Changes</button>
        </div>
    </form>
</div>
<%- include('footer') %>