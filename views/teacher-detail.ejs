<%- include('header') %>
<%- include('navigation-bar') %>
<%- include('message') %>
<div class="container" style="max-width: 500px" >
    <form action="/update/teacher" method="post">
        <h2>Details</h2>
        <div class="form-group">
            <label for="teacherID">Teacher ID:</label>
            <input type="text" class="form-control" id="teacherID" name="teacherID" readonly value="<%= data.teacherID%>">
        </div>
        <div class="form-group">
            <label for="name">Name:</label>
            <input type="text" class="form-control" id="name" name="name" value="<%= data.name%>">
        </div>
        <div class="form-group">
            <label for="password">Password:</label>
            <input type="password" class="form-control" id="password" name="password" value="<%= data.password%>">
        </div>
        <div class="form-group">
            <label for="sex">Sex:</label>
            <div data-toggle="buttons" id="sex">
                <% if(data.sex==="Male"){%>
                    <label class="btn btn-light">
                        <input type="radio" name="userType" value="Male" checked> Male
                    </label>
                    <label class="btn btn-light">
                        <input type="radio" name="userType" value="Female"> Female
                    </label>
                <%}else {%>
                    <label class="btn btn-light">
                        <input type="radio" name="userType" value="Male"> Male
                    </label>
                    <label class="btn btn-light">
                        <input type="radio" name="userType" value="Female" checked> Female
                    </label>
                <%}%>
            </div>
        </div>
        <div class="w3-center">
            <button type="reset" class="btn btn-danger">Reset</button>
            <button type="submit" class="btn btn-primary">Submit Changes</button>
        </div>
    </form>
</div>
<%- include('footer') %>